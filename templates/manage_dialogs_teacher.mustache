<div class="navitem d-flex flex-column align-self-center">
    {{>core/comboboxsearch}}
</div>
<table id="conversations-table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col" class="text-center">{{#str}}firstnamelastname, mod_aichatbot{{/str}}</th>
            <th scope="col" class="text-center">{{#str}}email, mod_aichatbot{{/str}}</th>
            <th scope="col" class="text-center">{{#str}}status, mod_aichatbot{{/str}}</th>
            <th scope="col" class="text-center">{{#str}}actions, mod_aichatbot{{/str}}</th>
            <th scope="col" class="text-center">{{#str}}submitted, mod_aichatbot{{/str}}</th>
            <th scope="col" class="text-center">{{#str}}comments, mod_aichatbot{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#conversations}}
            <tr data-conversation-id={{id}}>
                <td scope="row" class="text-center">{{userfullname}}</td>
                <td scope="row" class="text-center">{{useremail}}</td>
                {{#isshared}}
                    <td scope="row" class="text-center">{{#str}}attemptshared, mod_aichatbot{{/str}}</td>
                    <td scope="row" class="text-center">
                        <a href="{{config.wwwroot}}/mod/aichatbot/preview_dialog.php?action=preview&cid={{id}}&cmid={{cmid}}" class="btn btn-outline-dark aichatbot-preview-button"><i class="fa-regular fa-file-pdf"></i></a>
                        <a href="{{config.wwwroot}}/mod/aichatbot/preview_dialog.php?action=download&cid={{id}}&cmid={{cmid}}" class="btn btn-outline-dark aichatbot-download-button"><i class="fa-solid fa-download"></i></a>
                        <button type="button" class="btn btn-outline-dark aichatbot-revoke-button" data-toggle="modal" data-target="#revokeModal"><i class="fa-solid fa-close"></i></button>
                    </td>
                    <td scope="row" class="text-center">{{lastmodified}}</td>
                    {{#comment}}
                        <td id="comment-{{id}}" scope="row" class="text-center">{{comment}}
                            <div class="aichatbot-comment-button" data-toggle="modal" data-target="#commentModal"><i class="fa-solid fa-edit"></i></div>
                        </td>
                    {{/comment}}
                    {{^comment}}
                        <td id="comment-{{id}}" scope="row" class="text-center">
                            <div class="aichatbot-comment-button" data-toggle="modal" data-target="#commentModal"><i class="fa-solid fa-edit"></i></div>
                        </td>
                    {{/comment}}
                {{/isshared}}
                {{^isshared}}
                    <td scope="row" class="text-center">{{#str}}nosubmission, mod_aichatbot{{/str}}</td>
                    <td scope="row" class="text-center"></td>
                    <td scope="row" class="text-center"></td>
                    <td scope="row" class="text-center"></td>
                {{/isshared}}
            </tr>
        {{/conversations}}
    </tbody>
</table>
<nav>
  <ul id="pagination" class="pagination"></ul>
</nav>
<div id="aichatbot-table-legend">
    <small>
        <i class="fa-regular fa-file-pdf"></i>: {{#str}}preview, mod_aichatbot{{/str}}<br>
        <i class="fa-solid fa-download"></i>: {{#str}}download, mod_aichatbot{{/str}}<br>
        <i class="fa-solid fa-close"></i>: {{#str}}revoke, mod_aichatbot{{/str}}<br>
    </small>
</div>
{{>mod_aichatbot/modal_revoke}}
